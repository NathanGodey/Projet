import numpy as np
import matplotlib.pyplot as plt


nbParticles=100
class particle:
    x=0
    y=0
    vx=0
    vy=0
    def __init__(self):
        self.x=self.y=0
        
#Particles=nbParticles*[particle()]
p=particle()
p.x=p.y=0.5
p.vx=p.vy=0

def norme(v):
    return np.sqrt(v[0]**2+v[1]**2)
